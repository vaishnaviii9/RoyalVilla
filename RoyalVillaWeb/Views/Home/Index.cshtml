@* @using RoyalVilla.Dto *@
@* @model IEnumerable<VillaDTO> *@

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Royal Villa — Where Every Stay Becomes a Story</title>
    <link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:ital,wght@0,300;0,400;0,600;1,300;1,400&family=Jost:wght@300;400;500&display=swap" rel="stylesheet" />
    <style>
        /* ─── TOKENS ─────────────────────────────────────────── */
        :root {
            --cream:   #fdf8f3;
            --blush:   #f5e6e0;
            --rose:    #e8c4b8;
            --dusty:   #c9a99a;
            --sage:    #d4e0d8;
            --sage-dk: #9ab3a4;
            --sand:    #e8ddd0;
            --gold:    #c4a97d;
            --gold-lt: #eddfc8;
            --ink:     #2e2520;
            --muted:   #7a6a62;
            --white:   #ffffff;

            --ff-serif: 'Cormorant Garamond', Georgia, serif;
            --ff-sans:  'Jost', sans-serif;

            --radius-sm: 6px;
            --radius-md: 16px;
            --radius-lg: 32px;

            --shadow-soft: 0 4px 24px rgba(46,37,32,.08);
            --shadow-card: 0 8px 40px rgba(46,37,32,.12);
        }

        /* ─── RESET ──────────────────────────────────────────── */
        *, *::before, *::after { box-sizing: border-box; margin: 0; padding: 0; }
        html { scroll-behavior: smooth; }
        body {
            font-family: var(--ff-sans);
            background: var(--cream);
            color: var(--ink);
            overflow-x: hidden;
        }
        img { display: block; max-width: 100%; }
        a { text-decoration: none; color: inherit; }

        /* ─── HERO ───────────────────────────────────────────── */
        .hero {
            position: relative;
            min-height: 100vh;
            display: grid;
            place-items: center;
            overflow: hidden;
            background: linear-gradient(160deg, var(--blush) 0%, var(--cream) 45%, var(--sage) 100%);
        }

        /* Decorative circles */
        .hero::before {
            content: '';
            position: absolute;
            width: 700px; height: 700px;
            border-radius: 50%;
            background: radial-gradient(circle, var(--rose) 0%, transparent 70%);
            top: -200px; right: -200px;
            opacity: .45;
            animation: pulse 8s ease-in-out infinite;
        }
        .hero::after {
            content: '';
            position: absolute;
            width: 500px; height: 500px;
            border-radius: 50%;
            background: radial-gradient(circle, var(--sage) 0%, transparent 70%);
            bottom: -150px; left: -100px;
            opacity: .5;
            animation: pulse 10s ease-in-out infinite reverse;
        }
        @@keyframes pulse {
            0%, 100% { transform: scale(1); }
            50%       { transform: scale(1.07); }
        }

        /* Nav */
        .nav {
            position: fixed; top: 0; left: 0; right: 0;
            z-index: 100;
            display: flex; align-items: center; justify-content: space-between;
            padding: 1.25rem 3rem;
            background: rgba(253,248,243,.82);
            backdrop-filter: blur(14px);
            border-bottom: 1px solid rgba(196,169,125,.2);
        }
        .nav-logo {
            font-family: var(--ff-serif);
            font-size: 1.6rem;
            font-weight: 600;
            letter-spacing: .02em;
            color: var(--ink);
        }
        .nav-logo span { color: var(--gold); }
        .nav-links { display: flex; gap: 2rem; font-size: .8rem; letter-spacing: .1em; text-transform: uppercase; color: var(--muted); }
        .nav-links a:hover { color: var(--gold); transition: color .2s; }
        .nav-cta {
            font-size: .75rem; letter-spacing: .12em; text-transform: uppercase;
            padding: .6rem 1.4rem;
            border: 1px solid var(--gold);
            border-radius: 50px;
            color: var(--gold);
            transition: all .25s;
        }
        .nav-cta:hover { background: var(--gold); color: var(--white); }

        /* Stats bar */
        .hero-stats {
            position: absolute; top: 5rem; left: 3rem;
            display: flex; gap: 2.5rem;
            z-index: 2;
            animation: fadeUp .8s ease both;
        }
        .stat { text-align: center; }
        .stat-num {
            font-family: var(--ff-serif);
            font-size: 2.2rem; font-weight: 600;
            color: var(--gold);
            line-height: 1;
        }
        .stat-label { font-size: .65rem; letter-spacing: .14em; text-transform: uppercase; color: var(--muted); margin-top: .2rem; }

        /* Hero content */
        .hero-content {
            position: relative; z-index: 2;
            text-align: center;
            max-width: 820px;
            padding: 0 2rem;
            animation: fadeUp .9s .2s ease both;
        }
        .hero-eyebrow {
            font-size: .7rem; letter-spacing: .22em; text-transform: uppercase;
            color: var(--muted);
            margin-bottom: 1.2rem;
        }
        .hero-eyebrow span { color: var(--gold); margin: 0 .5rem; }
        .hero-title {
            font-family: var(--ff-serif);
            font-size: clamp(3rem, 7vw, 6rem);
            font-weight: 300;
            line-height: 1.08;
            color: var(--ink);
            margin-bottom: 1rem;
        }
        .hero-title em { font-style: italic; color: var(--dusty); }
        .hero-sub {
            font-size: .95rem; color: var(--muted);
            font-weight: 300; line-height: 1.7;
            max-width: 520px; margin: 0 auto 2.5rem;
        }

        /* Marquee */
        .marquee-wrap {
            overflow: hidden; width: 100%;
            border-top: 1px solid var(--rose);
            border-bottom: 1px solid var(--rose);
            padding: .65rem 0;
            margin-bottom: 2rem;
            background: rgba(255,255,255,.4);
        }
        .marquee-track {
            display: flex; width: max-content;
            animation: marquee 22s linear infinite;
        }
        .marquee-track span {
            font-size: .7rem; letter-spacing: .18em; text-transform: uppercase;
            color: var(--muted); padding: 0 2.5rem;
        }
        .marquee-track span.dot { color: var(--gold); padding: 0 .5rem; }
        @@keyframes marquee { from { transform: translateX(0); } to { transform: translateX(-50%); } }

        /* Hero image mosaic */
        .hero-mosaic {
            position: absolute; right: 3rem; top: 50%; transform: translateY(-50%);
            display: grid;
            grid-template-columns: 160px 120px;
            grid-template-rows: 120px 160px;
            gap: 12px;
            z-index: 1;
            opacity: .85;
            animation: fadeUp .9s .4s ease both;
        }
        .mosaic-img {
            border-radius: var(--radius-md);
            object-fit: cover;
            width: 100%; height: 100%;
            box-shadow: var(--shadow-card);
        }
        .mosaic-img:first-child  { grid-column: 1; grid-row: 1 / 3; height: 100%; }
        .mosaic-img:nth-child(2) { grid-column: 2; grid-row: 1; }
        .mosaic-img:nth-child(3) { grid-column: 2; grid-row: 2; }

        /* ─── BOOKING WIDGET ─────────────────────────────────── */
        .booking-section {
            background: linear-gradient(135deg, var(--blush) 0%, var(--gold-lt) 100%);
            padding: 4rem 3rem;
        }
        .booking-inner {
            max-width: 900px; margin: 0 auto;
            display: grid; grid-template-columns: 1fr 1fr auto; gap: 1.5rem;
            align-items: end;
        }
        .booking-header {
            grid-column: 1 / -1;
            text-align: center;
            margin-bottom: 1rem;
        }
        .booking-header h2 {
            font-family: var(--ff-serif);
            font-size: 2rem; font-weight: 400;
            color: var(--ink);
            margin-bottom: .4rem;
        }
        .booking-header p { font-size: .85rem; color: var(--muted); }

        .field-group label {
            display: block;
            font-size: .65rem; letter-spacing: .14em; text-transform: uppercase;
            color: var(--muted); margin-bottom: .5rem;
        }
        .field-group input, .field-group select {
            width: 100%;
            padding: .85rem 1.1rem;
            border: 1.5px solid var(--rose);
            border-radius: var(--radius-md);
            background: var(--white);
            font-family: var(--ff-sans);
            font-size: .9rem;
            color: var(--ink);
            outline: none;
            transition: border-color .2s;
        }
        .field-group input:focus, .field-group select:focus { border-color: var(--gold); }

        .btn-primary {
            padding: .9rem 2.2rem;
            background: var(--gold);
            color: var(--white);
            border: none;
            border-radius: var(--radius-md);
            font-family: var(--ff-sans);
            font-size: .75rem; letter-spacing: .14em; text-transform: uppercase;
            cursor: pointer;
            transition: all .25s;
            box-shadow: 0 6px 20px rgba(196,169,125,.4);
            white-space: nowrap;
        }
        .btn-primary:hover { background: #b5975e; transform: translateY(-2px); box-shadow: 0 10px 28px rgba(196,169,125,.45); }

        .booking-badges {
            grid-column: 1 / -1;
            display: flex; justify-content: center; gap: 2rem; flex-wrap: wrap;
            margin-top: .5rem;
        }
        .badge {
            font-size: .7rem; letter-spacing: .1em; text-transform: uppercase;
            color: var(--muted);
        }
        .badge::before { content: '✦ '; color: var(--gold); }

        /* ─── VILLA COLLECTION ───────────────────────────────── */
        .collection-section { padding: 5rem 3rem; }
        .section-header { text-align: center; margin-bottom: 3.5rem; }
        .section-eyebrow {
            font-size: .65rem; letter-spacing: .22em; text-transform: uppercase;
            color: var(--gold); margin-bottom: .8rem;
        }
        .section-title {
            font-family: var(--ff-serif);
            font-size: clamp(2rem, 4vw, 3.2rem); font-weight: 300;
            color: var(--ink); line-height: 1.15;
        }
        .section-title em { font-style: italic; color: var(--dusty); }
        .section-divider {
            width: 60px; height: 1px;
            background: var(--gold);
            margin: 1rem auto 0;
        }

        /* Villa Grid */
        .villa-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(340px, 1fr));
            gap: 2rem;
            max-width: 1200px; margin: 0 auto;
        }

        .villa-card {
            background: var(--white);
            border-radius: var(--radius-lg);
            overflow: hidden;
            box-shadow: var(--shadow-soft);
            transition: transform .3s ease, box-shadow .3s ease;
            position: relative;
        }
        .villa-card:hover {
            transform: translateY(-6px);
            box-shadow: var(--shadow-card);
        }

        .villa-img-wrap {
            position: relative;
            height: 240px;
            overflow: hidden;
        }
        .villa-img-wrap img {
            width: 100%; height: 100%;
            object-fit: cover;
            transition: transform .5s ease;
        }
        .villa-card:hover .villa-img-wrap img { transform: scale(1.06); }

        .villa-tag {
            position: absolute; top: 1rem; left: 1rem;
            background: rgba(253,248,243,.92);
            border-radius: 50px;
            padding: .3rem .9rem;
            font-size: .65rem; letter-spacing: .12em; text-transform: uppercase;
            color: var(--gold);
            backdrop-filter: blur(8px);
        }
        .villa-price-badge {
            position: absolute; bottom: 1rem; right: 1rem;
            background: var(--ink);
            color: var(--white);
            border-radius: 50px;
            padding: .35rem 1rem;
            font-family: var(--ff-serif);
            font-size: .95rem;
        }
        .villa-price-badge span { font-size: .7rem; font-family: var(--ff-sans); opacity: .7; }

        .villa-body { padding: 1.5rem; }

        .villa-name {
            font-family: var(--ff-serif);
            font-size: 1.5rem; font-weight: 400;
            color: var(--ink);
            margin-bottom: .5rem;
        }
        .villa-desc {
            font-size: .83rem; color: var(--muted);
            line-height: 1.65; margin-bottom: 1.1rem;
        }

        .villa-meta {
            display: flex; gap: 1rem; flex-wrap: wrap;
            margin-bottom: 1.3rem;
        }
        .meta-pill {
            display: flex; align-items: center; gap: .35rem;
            background: var(--cream);
            border-radius: 50px;
            padding: .3rem .8rem;
            font-size: .7rem; color: var(--muted);
            letter-spacing: .04em;
        }
        .meta-pill svg { width: 12px; height: 12px; fill: var(--gold); flex-shrink: 0; }

        .villa-actions { display: flex; gap: .8rem; }
        .btn-outline {
            flex: 1; padding: .7rem;
            border: 1.5px solid var(--rose);
            border-radius: var(--radius-md);
            font-family: var(--ff-sans);
            font-size: .72rem; letter-spacing: .1em; text-transform: uppercase;
            color: var(--muted); cursor: pointer;
            background: transparent;
            transition: all .2s;
        }
        .btn-outline:hover { border-color: var(--gold); color: var(--gold); }
        .btn-book {
            flex: 2; padding: .7rem;
            background: linear-gradient(135deg, var(--rose), var(--dusty));
            border: none;
            border-radius: var(--radius-md);
            font-family: var(--ff-sans);
            font-size: .72rem; letter-spacing: .1em; text-transform: uppercase;
            color: var(--white); cursor: pointer;
            transition: all .25s;
            box-shadow: 0 4px 16px rgba(201,169,154,.4);
        }
        .btn-book:hover { transform: translateY(-1px); box-shadow: 0 8px 24px rgba(201,169,154,.5); }

        /* ─── MODAL ──────────────────────────────────────────── */
        .modal-overlay {
            display: none;
            position: fixed; inset: 0;
            background: rgba(46,37,32,.45);
            backdrop-filter: blur(6px);
            z-index: 200;
            place-items: center;
            animation: fadeIn .25s ease;
        }
        .modal-overlay.active { display: grid; }
        @@keyframes fadeIn { from { opacity: 0; } to { opacity: 1; } }

        .modal {
            background: var(--white);
            border-radius: var(--radius-lg);
            width: min(600px, 94vw);
            max-height: 90vh;
            overflow-y: auto;
            box-shadow: 0 30px 80px rgba(46,37,32,.25);
            animation: slideUp .3s ease;
        }
        @@keyframes slideUp { from { transform: translateY(30px); opacity: 0; } to { transform: translateY(0); opacity: 1; } }

        .modal-img { height: 280px; width: 100%; object-fit: cover; border-radius: var(--radius-lg) var(--radius-lg) 0 0; }

        .modal-body { padding: 2rem 2.2rem 2.5rem; }
        .modal-title { font-family: var(--ff-serif); font-size: 2rem; font-weight: 400; margin-bottom: .4rem; }
        .modal-sub { font-size: .82rem; color: var(--muted); margin-bottom: 1.4rem; }
        .modal-desc { font-size: .88rem; color: var(--muted); line-height: 1.7; margin-bottom: 1.5rem; }
        .modal-features {
            display: grid; grid-template-columns: 1fr 1fr;
            gap: .5rem 1rem; margin-bottom: 1.8rem;
        }
        .modal-feature {
            font-size: .78rem; color: var(--muted);
            padding: .4rem 0;
            border-bottom: 1px solid var(--sand);
        }
        .modal-feature strong { color: var(--ink); }
        .modal-footer { display: flex; justify-content: space-between; align-items: center; }
        .modal-price { font-family: var(--ff-serif); font-size: 1.8rem; color: var(--gold); }
        .modal-price span { font-family: var(--ff-sans); font-size: .8rem; color: var(--muted); }
        .modal-close {
            position: absolute; top: 1rem; right: 1.2rem;
            background: rgba(255,255,255,.9);
            border: none; cursor: pointer;
            width: 36px; height: 36px;
            border-radius: 50%;
            font-size: 1.1rem; color: var(--muted);
            display: grid; place-items: center;
            transition: all .2s; z-index: 10;
        }
        .modal-close:hover { background: var(--rose); color: var(--ink); }
        .modal { position: relative; }

        /* ─── FOOTER ─────────────────────────────────────────── */
        footer {
            background: var(--ink);
            color: rgba(255,255,255,.6);
            text-align: center;
            padding: 2.5rem;
            font-size: .75rem; letter-spacing: .08em;
        }
        footer strong { color: var(--gold); font-weight: 400; font-family: var(--ff-serif); font-size: 1rem; }

        /* ─── UTILITY ANIMATIONS ─────────────────────────────── */
        @@keyframes fadeUp {
            from { opacity: 0; transform: translateY(24px); }
            to   { opacity: 1; transform: translateY(0); }
        }

        /* ─── RESPONSIVE ─────────────────────────────────────── */
        @@media (max-width: 900px) {
            .hero-mosaic { display: none; }
            .booking-inner { grid-template-columns: 1fr; }
            .btn-primary { width: 100%; }
            .nav-links { display: none; }
            .hero-stats { position: static; display: none; }
        }
    </style>
</head>
<body>

<!-- ═══ NAV ════════════════════════════════════════════════ -->
<nav class="nav">
    <div class="nav-logo">Royal<span>Villa</span></div>
    <div class="nav-links">
        <a href="#">Properties</a>
        <a href="#">Destinations</a>
        <a href="#">Experiences</a>
        <a href="#">About</a>
    </div>
    <a href="#booking" class="nav-cta">Reserve Now</a>
</nav>

<!-- ═══ HERO ════════════════════════════════════════════════ -->
<section class="hero">

    <div class="hero-stats">
        <div class="stat"><div class="stat-num">200+</div><div class="stat-label">Properties</div></div>
        <div class="stat"><div class="stat-num">40+</div><div class="stat-label">Destinations</div></div>
        <div class="stat"><div class="stat-num">5★</div><div class="stat-label">Rated</div></div>
    </div>

    <!-- Floating mosaic images -->
    <div class="hero-mosaic">
        <img class="mosaic-img" src="https://images.unsplash.com/photo-1582268611958-ebfd161ef9cf?w=320&q=80" alt="Villa Pool" />
        <img class="mosaic-img" src="https://images.unsplash.com/photo-1571896349842-33c89424de2d?w=240&q=80" alt="Villa Exterior" />
        <img class="mosaic-img" src="https://images.unsplash.com/photo-1560185007-cde436f6a4d0?w=240&q=80" alt="Villa Interior" />
    </div>

    <div class="hero-content">
        <p class="hero-eyebrow">Curated Luxury <span>✦</span> Est. 1988</p>
        <h1 class="hero-title">Where Every Stay Becomes<br><em>an Unforgettable Story</em></h1>
        <p class="hero-sub">Handpicked villas, estates & private retreats in the world's most coveted destinations</p>

        <div class="marquee-wrap">
            <div class="marquee-track">
                <span>Private Villas</span><span class="dot">✦</span>
                <span>Beachfront Estates</span><span class="dot">✦</span>
                <span>Mountain Retreats</span><span class="dot">✦</span>
                <span>City Penthouses</span><span class="dot">✦</span>
                <span>Garden Residences</span><span class="dot">✦</span>
                <span>Private Villas</span><span class="dot">✦</span>
                <span>Beachfront Estates</span><span class="dot">✦</span>
                <span>Mountain Retreats</span><span class="dot">✦</span>
                <span>City Penthouses</span><span class="dot">✦</span>
                <span>Garden Residences</span><span class="dot">✦</span>
            </div>
        </div>

        <a href="#booking" class="btn-primary" style="display:inline-block">Explore Properties</a>
    </div>
</section>

<!-- ═══ BOOKING WIDGET ══════════════════════════════════════ -->
<section class="booking-section" id="booking">
    <div class="booking-inner">
        <div class="booking-header">
            <h2>Reserve Your Stay</h2>
            <p>Select your dates and discover available properties</p>
        </div>

        <div class="field-group">
            <label>Check In Date</label>
            <input type="date" />
        </div>

        <div class="field-group">
            <label>No. of Nights</label>
            <select>
                <option value="">Select nights</option>
                @for (int i = 1; i <= 30; i++) {
                    <option value="@i">@i Night@(i > 1 ? "s" : "")</option>
                }
            </select>
        </div>

        <button class="btn-primary">Check Availability</button>

        <div class="booking-badges">
            <span class="badge">Instant Confirmation</span>
            <span class="badge">Best Price Guarantee</span>
            <span class="badge">24 / 7 Concierge Support</span>
            <span class="badge">Free Cancellation Available</span>
        </div>
    </div>
</section>

<!-- ═══ VILLA COLLECTION ════════════════════════════════════ -->
<section class="collection-section">
    <div class="section-header">
        <p class="section-eyebrow">Our Collection</p>
        <h2 class="section-title">Available <em>Villas</em></h2>
        <div class="section-divider"></div>
    </div>

    @{
        // Placeholder images cycling through Unsplash photos
        var villaImages = new[] {
            "https://images.unsplash.com/photo-1582268611958-ebfd161ef9cf?w=640&q=80",
            "https://images.unsplash.com/photo-1520250497591-112f2f40a3f4?w=640&q=80",
            "https://images.unsplash.com/photo-1571003123894-1f0594d2b5d9?w=640&q=80",
            "https://images.unsplash.com/photo-1566073771259-6a8506099945?w=640&q=80",
            "https://images.unsplash.com/photo-1561501900-3701fa6a0864?w=640&q=80",
            "https://images.unsplash.com/photo-1510798831971-661eb04b3739?w=640&q=80",
        };
        var villaTypes = new[] { "Beachfront", "Mountain Retreat", "City Estate", "Garden Villa", "Lakeside", "Private Island" };
        int imgIdx = 0;
    }

    <div class="villa-grid">
        @*
        === BACKEND DATA LOGIC (commented out) ===
        @if (Model != null)
        {
            @foreach (var villa in Model)
            {
                var img   = villaImages[imgIdx % villaImages.Length];
                var vtype = villaTypes[imgIdx % villaTypes.Length];
                imgIdx++;
                <div class="villa-card">
                    <div class="villa-img-wrap">
                        <img src="@img" alt="@villa.Name" loading="lazy" />
                        <span class="villa-tag">@vtype</span>
                        <span class="villa-price-badge">from $480 <span>/night</span></span>
                    </div>
                    <div class="villa-body">
                        <h3 class="villa-name">@villa.Name</h3>
                        <p class="villa-desc">@villa.Details</p>
                        <div class="villa-meta">
                            <span class="meta-pill">
